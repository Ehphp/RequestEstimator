# Supabase Configuration
# Copy this file to .env and fill in your actual values
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Auth fallback (solo per sviluppo locale)
# Imposta a "true" per permettere l'accesso mock tramite localStorage quando Supabase non Ã¨ configurato.
# Lascialo vuoto o "false" in ambienti reali.
VITE_ALLOW_FALLBACK_AUTH=false

# Imposta a "true" quando i trigger database (migrations/003) sono stati applicati e gestiscono i timestamp.
VITE_REQUIRE_DB_TRIGGERS=false

# Feature flag: abilita lo stato "Draft" per le liste (richiede apply migrazione 005+)
VITE_ENABLE_DRAFT_STATUS=false
